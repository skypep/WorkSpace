<?xml version="1.0" encoding="utf-8"?>
<com.toro.helper.view.SafeguardRadiusItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_heitht"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/horizontal_margin_m"
    android:paddingRight="@dimen/horizontal_margin_m"
    android:id="@+id/radius_layout"
    >

    <ImageView
        android:id="@+id/selected_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/text_list_selected"
        />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/in_icon"
        android:gravity="left"
        android:textColor="#000000"
        android:paddingLeft="@dimen/horizontal_margin"
        />

</com.toro.helper.view.SafeguardRadiusItem>