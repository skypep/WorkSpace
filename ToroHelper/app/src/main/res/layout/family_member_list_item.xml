<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/vertical_margin"
    android:paddingBottom="@dimen/vertical_margin"
    >

    <com.toro.helper.view.RoundnessImageView
        android:id="@+id/head_img"
        android:layout_width="@dimen/photo_list_head_photo_size_m"
        android:layout_height="@dimen/photo_list_head_photo_size_m"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/list_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_m"
                    />
                <TextView
                    android:id="@+id/agreen_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/agreen_backgroud_shape"
                    android:text="@string/agreen"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_in"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/action_selecte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:visibility="gone"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|left"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/horizontal_margin"
        android:textSize="@dimen/text_size_l"
        android:layout_toRightOf="@+id/head_img"
        android:layout_toLeftOf="@+id/right_layout"
        android:textColor="#000000"
        />


</RelativeLayout>