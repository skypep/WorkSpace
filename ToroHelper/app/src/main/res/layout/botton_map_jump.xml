<?xml version="1.0" encoding="utf-8"?>
<com.toro.helper.view.MapJumpLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/map_jump_layout"
    android:background="#FFFFFF"
    android:padding="@dimen/vertical_margin_m"
    android:layout_marginBottom="@dimen/vertical_margin_m"
    android:layout_alignParentBottom="true"
    android:visibility="gone"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/gd_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/gd_img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/action_bar_heitht"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/gd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_m"
                android:textColor="#696969"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bd_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/bd_img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/action_bar_heitht"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/bd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_m"
                android:textColor="#696969"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tx_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/tx_img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/action_bar_heitht"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/tx_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_m"
                android:textColor="#696969"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin"
        android:text="@string/cancel"
        android:background="#F0F0F0"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:textColor="#696969"
        />
</com.toro.helper.view.MapJumpLayout>