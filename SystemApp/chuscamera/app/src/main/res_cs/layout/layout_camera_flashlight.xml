<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="#50000000"
    android:gravity="center_horizontal"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_flashlight_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="horizontal">

        <com.android.camera.ui.RotateImageView
            android:id="@+id/menu_flashlight"
            style="@style/MenuButton_1"
            android:layout_weight="1"
            android:src="@drawable/chus_flashlight_off" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chus_ic_line_ver"/>

        <com.android.camera.ui.RotateImageView
            android:id="@+id/menu_flashlight_on_iv"
            style="@style/MenuButton_1"
            android:layout_weight="1"
            android:src="@drawable/chus_flashlight_on" />
        <!--chus_ic_settings_hdr_on-->
        <com.android.camera.ui.RotateImageView
            android:id="@+id/menu_flashlight_off_iv"
            style="@style/MenuButton_1"
            android:layout_weight="1"
            android:src="@drawable/chus_flashlight_off" />

        <com.android.camera.ui.RotateImageView
            android:id="@+id/menu_flashlight_auto_iv"
            style="@style/MenuButton_1"
            android:layout_weight="1"
            android:src="@drawable/chus_flashlight_auto" />

        <com.android.camera.ui.RotateImageView
            style="@style/MenuButton_1"
            android:layout_weight="1"
            android:src="@drawable/bg_pressed"
            android:visibility="invisible" />

    </LinearLayout>

</RelativeLayout>