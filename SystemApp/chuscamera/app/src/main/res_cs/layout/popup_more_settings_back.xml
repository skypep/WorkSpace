<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llayout_01"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_marginTop="6dip"
        android:background="@drawable/chus_popup_background"
        android:layout_width="@dimen/chus_quick_settings_button_size_1"
        android:layout_height="@dimen/chus_quick_settings_button_size_1">
        <ImageView
            android:id="@+id/iv01"
            android:scaleType="fitXY"
            android:padding="2dip"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chus_ic_settings_touch_take_photo_on"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llayout_02"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_marginTop="6dip"
        android:background="@drawable/chus_popup_background"
        android:layout_width="@dimen/chus_quick_settings_button_size_1"
        android:layout_height="@dimen/chus_quick_settings_button_size_1">
        <ImageView
            android:id="@+id/iv02"
            android:scaleType="fitXY"
            android:padding="2dip"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chus_ic_settings_hdr_on"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llayout_03"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_marginTop="6dip"
        android:background="@drawable/chus_popup_background"
        android:layout_width="@dimen/chus_quick_settings_button_size_1"
        android:layout_height="@dimen/chus_quick_settings_button_size_1">
        <ImageView
            android:id="@+id/iv04"
            android:scaleType="fitXY"
            android:padding="2dip"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chus_ic_settings_more"
             />
    </LinearLayout>
</LinearLayout>