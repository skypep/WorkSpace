<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#ffffffff"/>
            <size android:height="30dip" android:width="30dip"/>
            <stroke android:width="1dip" android:color="#ff000000"/>
        </shape>
    </item>
    <item android:state_pressed="false" android:state_focused="false">
        <shape android:shape="oval">
            <solid android:color="#ffb0b0b0"/>
            <size android:height="20dip" android:width="20dip"/>
            <stroke android:width="1dip" android:color="#ff404040"/>
        </shape>
    </item>


</selector>
